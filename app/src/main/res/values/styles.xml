<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="cornerRadius">0dp</item>
    </style>
    <style name="darkBlueButton" parent="button">
        <item name="backgroundTint">@color/darkBlue</item>
    </style>
    <style name="lightBlueButton" parent="button">
        <item name="backgroundTint">@color/lightBlue</item>
    </style>
    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="darkBlueTextView" parent="textView">
        <item name="android:background">@color/darkBlue</item>
    </style>
    <style name="lightBlueTextView" parent="textView">
        <item name="android:background">@color/lightBlue</item>
    </style>
</resources>